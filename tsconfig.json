{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "noEmit": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "isolatedModules": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}